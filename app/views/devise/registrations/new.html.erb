<div class="main-inner">
<h2>新規ユーザー登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div id="review-w">
  <div class="st-la">
   <div class="field">
        <label>お名前: </label>
        <%= f.text_field :nickname,:placeholder => "例）山田太郎", autofocus: true,:class => "wd-middle" %>
      </div>

<div class="field">
<label>プロフィール画像: </label>
      <%= f.file_field :avatar %>
      </div>

  <div class="field">
    <label>メールアドレス: </label>
    <%= f.text_field :email,:placeholder => "例）test@test.com", :class => "wd-middle",autofocus: true %>
  </div>

  <div class="field">
    <label>パスワード（半角英数字6文字以上）: </label>

    <%= f.password_field :password, :class => "wd-middle",autocomplete: "off" %>
  </div>

  <div class="field">
    <label>パスワード（再確認）: </label>
    <%= f.password_field :password_confirmation,:class => "wd-middle", autocomplete: "off" %>
  </div>

  <div class="post-button"><button name="button" type="submit">新規登録する</button></div>
<% end %>

</div><!-- st-la -->
  </div><!-- review-w -->
</div><!-- main-inner -->
