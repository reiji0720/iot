<div class="main-inner">
<h2>アカウント設定</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div id="review-w">
  <div class="st-la">

   <label>お名前: </label>
        <%= f.text_field :nickname,:placeholder => "例）山田太郎", autofocus: true,:class => "wd-mini" %>

<label>プロフィール画像: </label>
<%= image_tag @user.avatar(:thumb) %>
<%= f.file_field :avatar %>
<br>

  <div class="field">
     <label>メールアドレス: </label>
    <%= f.text_field :email,:class => "wd-middle", autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
  <label>パスワード(変更時のみ記入): </label>
    <%= f.password_field :password,:class => "wd-mini", autocomplete: "off" %>
  </div>

  <div class="field">
    <label>パスワード再確認: </label>
    <%= f.password_field :password_confirmation, :class => "wd-mini",autocomplete: "off" %>
  </div>

  <div class="field">
  <label>現在のパスワードを入力: </label>
    <%= f.password_field :current_password, :class => "wd-mini",autocomplete: "off" %>
  </div>

  <div class="post-button"><button name="button" type="submit">更新する</button></div>
<% end %>


</div><!-- st-la -->
  </div><!-- review-w -->
</div><!-- main-inner -->
